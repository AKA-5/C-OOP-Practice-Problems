#include<iostream>
using namespace std;

void num_Pattern(int n)
{
	if(n>=0)
	{
		cout << n<<" ";
		num_Pattern(n - 1);
	}
	else
	return;
}

int main()
{
    int n1 = 0;
    cout << "Integer to print its series:";
    cin >> n1;
    num_Pattern(n);
    cout<<endl;
    num_pattern(n1,1);

    return 0;
}
